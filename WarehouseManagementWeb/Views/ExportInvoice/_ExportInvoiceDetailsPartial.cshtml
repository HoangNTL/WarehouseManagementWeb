@model WarehouseManagementWeb.Models.Dtos.ExportInvoiceDto

<div>
    <h5>Thông tin hóa đơn</h5>
    <p><strong>Mã hóa đơn:</strong> @Model.InvoiceCode</p>
    <p><strong>Ngày xuất:</strong> @Model.ExportDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Khách hàng:</strong> @Model.CustomerName</p>
    <p><strong>Ghi chú:</strong> @Model.Note</p>

    <h5>Danh sách sản phẩm</h5>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Đơn vị tính</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductCode</td>
                    <td>@product.ProductName</td>
                    <td>@product.Unit</td>
                    <td>@product.UnitPrice.ToString("N0") đ</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>

