@model List<WarehouseManagementWeb.Models.ImportInvoice>
@{
    ViewBag.Title = "Danh sách hóa đơn nhập";
}

<h2>Hóa Đơn Nhập</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Mã Hóa Đơn</th>
            <th>Ngày Nhập</th>
            <th>Nhà Cung Cấp</th>
            <th>Ghi Chú</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.Id</td>
                <td>@invoice.InvoiceCode</td>
                <td>@invoice.ImportDate.ToString("dd/MM/yyyy")</td>
                <td>@invoice.SupplierName</td>
                <td>@invoice.Note</td>
                <td>
                    <a href="/ImportInvoice/Edit/@invoice.Id">
                        <button class="btn btn-warning" >Sửa</button>
                    </a>
                    <a href="/ImportInvoice/Delete/@invoice.Id" onclick="return confirm('Xác nhận xóa?')">
                        <button class="btn btn-danger">Xóa</button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
