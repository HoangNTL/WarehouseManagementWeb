@model WarehouseManagementWeb.Models.Dtos.ImportInvoiceDto

<div>
    <p><strong>Mã hóa đơn:</strong> @Model.InvoiceCode</p>
    <p><strong>Ngày nhập:</strong> @Model.ImportDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Nhà cung cấp:</strong> @Model.SupplierName</p>
    <p><strong>Ghi chú:</strong> @Model.Note</p>
</div>

<h5>Danh sách sản phẩm</h5>
<table class="table">
    <thead>
        <tr>
            <th>Mã SP</th>
            <th>Tên SP</th>
            <th>Đơn vị</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductCode</td>
                <td>@product.ProductName</td>
                <td>@product.Unit</td>
                <td>@product.UnitPrice.ToString("N0")</td>
                <td>@product.Quantity</td>
            </tr>
        }
    </tbody>
</table>
